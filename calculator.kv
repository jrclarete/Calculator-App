#:kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex
<CalculatorWindow>:
    orientation: "vertical"
    
    canvas.before:
        Color:
            rgba: hex("#3F3E3E")
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        size_hint_y: None
        height: 50
        padding: 3,3
        Label:
            id: textOperator
            text: ""
            valign: 'top'
            font_size: 25
            text_size: self.size
            bold: True
            color: 1,1,1,1
            
    BoxLayout:
        size_hint_y: None
        height: 50    
        padding: 3,3
        Label:
            id: textAnswer
            text: ""
            halign: 'right'
            valign: 'bottom'
            font_size: 25
            text_size: self.size  
            bold: True   
            color: 1,1,1,1 

    #BoxLayout for buttons
    BoxLayout:
        orientation: "vertical"
        
        canvas.before:
            Color:
                rgba: hex("#3F3E3E")
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: "horizontal"
            spacing: 2
            padding: 2,1
            Button: 
                text: "AC"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnClearKey()
            Button: 
                text: "DEL"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnDelKey()
            Button: 
                text: "%"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnPercent()
            Button: 
                text: "/"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnPressed("/")

        BoxLayout:
            orientation: "horizontal"
            padding: 2,1
            spacing: 2
            Button: 
                text: "7"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("7")
            Button: 
                text: "8"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("8")
            Button: 
                text: "9"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("9")
            Button: 
                text: "x"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnPressed("*")

        BoxLayout:
            orientation: "horizontal"
            padding: 2,1
            spacing: 2
            Button: 
                text: "4"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("4")
            Button: 
                text: "5"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("5")
            Button: 
                text: "6"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("6")
            Button: 
                text: "-"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnPressed("-")

        BoxLayout:
            orientation: "horizontal"
            padding: 2,1
            spacing: 2
            Button: 
                text: "1"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("1")
            Button: 
                text: "2"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("2")
            Button: 
                text: "3"
                bold: True
                font_size: 20
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("3")
            Button: 
                text: "+"
                bold: True
                font_size: 20
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnPressed("+")

        BoxLayout:
            
            orientation: "horizontal"
            padding: 2,1
            spacing: 2
            Button: 
                text: "0"
                bold: True
                font_size: 20
                size_hint_x: .5
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
                on_press: root.btnPressed("0")
            Button: 
                text: "."
                bold: True
                font_size: 20
                size_hint_x: .25
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnPressed(".")
            Button: 
                text: "="
                bold: True
                font_size: 20
                size_hint_x: .25
                background_color: hex("#ed902d")
                background_normal: ""
                on_press: root.btnEquals()
        
