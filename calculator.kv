#:kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex
<CalculatorWindow>:
    orientation: "vertical"
    
    BoxLayout:
        size_hint_y: None
        height: 75
        canvas.before:
            Color:
                rgba: hex("#3F3E3E")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "0"
            valign: 'top'
            text_size: self.size
            font_size: 35
            bold: True
            color: 1,1,1,1
            
    BoxLayout:
        size_hint_y: None
        height: 75
        canvas.before:
            Color:
                rgba: hex("#3F3E3E")
            Rectangle:
                size: self.size
                pos: self.pos
            
        Label:
            text: "Answer"
            halign: 'right'
            valign: 'bottom'
            text_size: self.size
            font_size: 35   
            bold: True   
            color: 1,1,1,1 

    BoxLayout:
        orientation: "vertical"
        
        canvas.before:
            Color:
                rgba: hex("#3F3E3E")
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: "horizontal"
            spacing: 2
            padding: 2,1
            Button: 
                text: "AC"
                font_size: 25
                bold: True
                background_color: hex("#ed902d")
                background_normal: ""
            Button: 
                text: "DEL"
                font_size: 25
                bold: True
                background_color: hex("#ed902d")
                background_normal: ""
            Button: 
                text: "%"
                font_size: 25
                bold: True
                background_color: hex("#ed902d")
                background_normal: ""
            Button: 
                text: "/"
                font_size: 25
                bold: True
                background_color: hex("#ed902d")
                background_normal: ""

