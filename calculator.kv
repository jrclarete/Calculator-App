                text: "8"
                font_size: 25
                bold: True
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
            Button: 
                text: "9"
                font_size: 25
                bold: True
                background_color: hex("#D6D6D6")
                background_normal: ""
                color: hex("#3F3E3E")
            Button: 
                text: "x"
                font_size: 25
                bold: True
                background_color: hex("#ed902d")
                background_normal: ""

